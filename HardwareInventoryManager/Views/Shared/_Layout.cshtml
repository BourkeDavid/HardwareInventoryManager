    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/toastr")
    @Scripts.Render("~/bundles/datatables")
    @Scripts.Render("~/bundles/angular")
    @Scripts.Render("~/bundles/angulardatatables")
    @Scripts.Render("~/bundles/angularbootstrap")
    @Scripts.Render("~/bundles/app")


    @RenderSection("scripts", required: false)
    <script type="text/javascript">
        $(document).ready(function () {
            if ($('#success').val()) {
                displayMessage($('#success').val(), 'success');
            }
            if ($('#info').val()) {
                displayMessage($('#info').val(), 'info');
            }
            if ($('#warning').val()) {
                displayMessage($('#warning').val(), 'warning');
            }
            if ($('#error').val()) {
                displayMessage($('#error').val(), 'error');
            }
        });

        var displayMessage = function (message, msgType) {
            toastr.options = {
                'closeButton': false,
                'debug': false,
                'positionClass': 'toast-top-right',
                'onClick': null,
                'showDuration': '300',
                'hideDuration': '1000',
                'timeOut': '8000',
                'extendedTimeOut': '1000',
                'showEasing': 'swing',
                'hideEasing': 'linear',
                'showMethod': 'fadeIn',
                'hideMethod': 'fadeOut'
            };

            toastr[msgType](message);
        };

        $(function () {
            $("input[id*='Date']").datepicker({
                dateFormat: 'dd/mm/yy',
                showButtonPanel: true,
                changeMonth: true,
                changeYear: true
            });
        });

    </script>

    <input type="hidden" id="success" value="@TempData["success"]" />
    <input type="hidden" id="info" value="@TempData["info"]" />
    <input type="hidden" id="warning" value="@TempData["warning"]" />
    <input type="hidden" id="error" value="@TempData["error"]" />

    @HardwareInventoryManager.Helpers.UtilityHelper.GoogleAnalytics()
</body>
